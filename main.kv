# Forms the design of checkbox in the add/edit a task dialog box
<Check@MDCheckbox>:
    group: 'group'
    size_hint: None, None
    size: dp(48), dp(48)
	theme_text_color: "Custom"
	selected_color: rgba('#C6826D')

# Forms the design and layout of add a task dialog box
<AddTask>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "310dp"

	task_name: task_name
	task_details: task_details

    FloatLayout:
		MDLabel:
			text: 'Important'
			pos_hint: {'center_x': .7, 'center_y': .5}
		Check:
			id: importantc
			active: True
			on_active: root.on_checkbox_active(*args)
			pos_hint: {'center_x': .4, 'center_y': .5}
		MDLabel:
			text: 'Normal'
			pos_hint: {'center_x': 1.17, 'center_y': .5}
		Check:
			id: normalc
			active: False
			pos_hint: {'center_x': .6, 'center_y': .5}
    MDTextField:
		id: task_name
        hint_text: "Task Name"
		line_color_focus: rgba('#C6826D')
    MDTextField:
		id: task_details
        hint_text: "Task Details"
		line_color_focus: rgba('#C6826D')
	MDLabel:
		id: duedate
		text: root.get_due_date()
		halign: 'center'
    MDRaisedButton:
        text: "Set Task Due Date"
		theme_text_color: "Custom"
		md_bg_color: rgba('#C6826D')
		text_color: utils.get_color_from_hex('#F1ECEC')
        on_release: root.show_date_picker()
		pos_hint: {'center_x': .5, 'center_y': .5}
	MDLabel:
		id: duetime
		text: root.get_due_time()
		halign: 'center'
    MDRaisedButton:
        text: "Set Task Due Date Time"
		theme_text_color: "Custom"
		md_bg_color: rgba('#C6826D')
		text_color: utils.get_color_from_hex('#F1ECEC')
        pos_hint: {'center_x': .5, 'center_y': .5}
        on_release: root.show_time_picker()
	MDFillRoundFlatButton:
		text: "Add"
		theme_text_color: 'Custom'
		md_bg_color: rgba('#C6826D')
		text_color: utils.get_color_from_hex('#F1ECEC')
		pos_hint: {'center_x': .93, 'center_y': .5}
		on_release:
			root.get_task(task_name.text, task_details.text)

