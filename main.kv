		markup: True
		halign: "left"
		theme_text_color: 'Custom'
		text_color: rgba('#C69C6D')

# Forms the design and layout of detailed task card
<Card2>
    orientation: "vertical"
	size_hint: None, None
	size: "532dp", "88dp"
	pos_hint: {"center_x": .5, "center_y": .5}
	radius: 15,15,15,15
	elevation: 3
	padding: '15dp'
	spacing: '18dp'

	on_release:
		root.task_dialog(root.title2, root.info, root.details_cut, root.task_idpk)

    canvas:
        Color:
            rgba: rgba('#6DC688') if root.index_color == 1 else rgba('#C6826D')
        RoundedRectangle:
            pos: self.pos
            size: self.size
	MDLabel:
		text: root.title
		text: '[font=Fonts/segoeuib]' + root.title  + '[/font]'
		font_size: '20dp'
		markup: True
		halign: "left"
		theme_text_color: 'Custom'
		text_color: rgba('#FFFFFF')
	MDLabel:
		text: root.info
		text: '[font=Fonts/segoeuib]' + root.info  + '[/font]'
		font_size: '10dp'
		markup: True
		halign: "left"
		theme_text_color: 'Custom'
		text_color: rgba('#FFFFFF')
	FloatLayout:
